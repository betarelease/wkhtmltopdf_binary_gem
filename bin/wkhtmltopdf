require 'rbconfig'

file_name = case RbConfig::CONFIG['host']
when /x86_64.*linux/
  'wkhtmltox-0.12.2.1_linux-trusty-amd64.deb'
when /darwin/
  'wkhtmltox-0.12.2.1_osx-cocoa-x86-64.pkg'
else
  raise "Invalid platform. Must be running on ubuntu or intel-based Mac OS."
end

system *$*.unshift("#{file_name}")
